<Window x:Class="RunTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RunTracker"
        xmlns:converter="clr-namespace:RunTracker.Converter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <converter:RunTypeToObjectIdConverter x:Key="RunTypeToObjectIdConverter"/>
        <converter:StringToTimeSpanConverter x:Key="StringToTimeSpanConverter"/>
        <converter:StringToFloatConverter x:Key="StringToFloatConverter"/>
    </Window.Resources>
    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Margin="10" Grid.ColumnSpan="2">
            <TextBlock Text="Registrera nytt löppass" FontWeight="Bold" FontSize="16"/>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Datum:" Width="150"/>
                <DatePicker SelectedDateFormat="Short" 
                            FirstDayOfWeek="Monday"
                            SelectedDate="{Binding RunningSession.Date, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Distans (km):" Width="150"/>
                <TextBox Text="{Binding RunningSession.Distance, UpdateSourceTrigger=PropertyChanged}"
                         Width="200">
                </TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Tid (hh:mm:ss):" Width="150"/>
                <TextBox Text="{Binding RunningSession.Time, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Typ av löppass:" Width="150"/>
                <ComboBox ItemsSource="{Binding RunTypes, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                          DisplayMemberPath="Name"
                          SelectedItem="{Binding RunType, UpdateSourceTrigger=PropertyChanged}"
                          Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label  Width="150"/>
                <Button Content="Lägg till löppass" 
                        Width="200"
                        Padding="5"
                        Margin="0,5,5,0"
                        Command="{Binding AddRunningSessionCommand}"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="10" Grid.Column="1">
            <TextBlock Text="Lägg till ny Typ av löppass" FontWeight="Bold" FontSize="16"/>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBox Text="{Binding RunTypeNew, UpdateSourceTrigger=PropertyChanged}" Width="200" Height="25"/>
                <Button Content="Lägg till" Width="100" Margin="5,0" Command="{Binding AddRunTypeCommand, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </StackPanel>

        <ListView x:Name="RunsListView" 
           Grid.Row="1"
           Grid.ColumnSpan="2"       
           Margin="10" 
           ItemsSource="{Binding RunningSessions}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Datum" DisplayMemberBinding="{Binding Date, StringFormat={}{0:yyyy-MM-dd}}"/>
                    <GridViewColumn Header="Distans (km)" DisplayMemberBinding="{Binding Distance}"/>
                    <GridViewColumn Header="Tid" DisplayMemberBinding="{Binding Time}"/>
                    <GridViewColumn Header="Typ av löppass" DisplayMemberBinding="{Binding RunType.Name}" Width="200"/>
                    <GridViewColumn Header="Edit">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button  
                                Command="{Binding DataContext.OpenEditRunningSessionDialogCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                CommandParameter="{Binding}">   
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconBlock Icon="Pen"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Delete">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button 
                                Command="{Binding DataContext.DeleteRunningSessionCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                CommandParameter="{Binding}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconBlock Icon="TrashCan"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
